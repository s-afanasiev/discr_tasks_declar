{
    "init": ["disk_space_1", "disk_space_2", "nvidia_1"],
    "jobs": {
        "disk_space_1": {"type":"disk_space", "condition": "lte 1 gb", "action":"clean_space_1"},
        "disk_space_2": {"type":"disk_space", "condition": "gte 100 gb", "action":"increase_traffic"},
        "disk_space_3": {"type":"disk_space", "condition": "gte 100 gb", "action":"increase_traffic", "interval":9999999},
        "nvidia_1":{"type":"nvidia_smi", "condition": "is_exist", "action":"do_render"},
        "clean_space_1":{"type":"exec_cmd", "type_param":"clean.bat", "condition": "is_done", "action":"proc_count_1"},
        "proc_count_1": {"type":"proc_count_by_name", "type_param":"notepad", "condition": "is_one", "action":"do_render_2", "delay":50000},
        "do_render_2": {"type":"exec_cmd", "type_param":"3dmax.exe"},
        "proc_count_2": {"type":"proc_count", "condition": "gte", "action":"stop_1", "interval":30000},
        "stop_1": {"type":"stop", "type_param":"disk_space_1"}
    },
    "JOBS_DICTIONARY":[
        "this is description block",
        {"disk_space":"return disk space on disk by disk letter. Answer keys: {free, size}"},
        {"proc_count":"count of some processess by name, e.g. 'notepad'"},
        {"exec_cmd":"execute arbitrary command"},
        {"nvidia_smi":"info about nvidia cards. ANswer is: info={gpu_id, gpu_name, bus_id, fan, temp, mem_use}"},
        {"gpu_info":"thumb"}, 
        {"housekeeping":"thumb"},
        {"wetransfer":"thumb"}
    ]
}